<div class="d-flex align-items-center">
  <img src="{{ item.subject.img.url ?? item.subject.product.img.url }}" width="50px" class="img-thumbnail" />
  <div class="ms-2 lh-sm">
    <p class="mb-1">{{ item.subject.product.name }}</p>

    {% if item.subject.label %}
      <small class="text-secondary">{{ item.subject.label }}</small>
    {% endif %}

    <small class="text-secondary">&times;{{ item.quantity }}</small>
  </div>
</div>
